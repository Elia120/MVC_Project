@model IEnumerable<Compuskills.Projects.TotalTimesheetPro.Domain.Models.TimesheetEntry>

@{
    ViewBag.Title = "Index";
}

    <h2>Date @DateTime.Today.Day.@DateTime.Today.Month.@DateTime.Today.Year</h2>

<div class="row">
    <div class="col-lg-8 col-md-8 col-sm-8">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StartTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Project.ProjectName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Project.Client.Name)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Project.ProjectName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Project.Client.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.TimesheetEntryID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.TimesheetEntryID })
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4">
        @Html.RenderAction("Create")
    </div>
</div>
