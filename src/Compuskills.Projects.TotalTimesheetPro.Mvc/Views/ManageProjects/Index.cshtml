        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ProjectName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Client.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BillRate)
    </td>
    <td>
