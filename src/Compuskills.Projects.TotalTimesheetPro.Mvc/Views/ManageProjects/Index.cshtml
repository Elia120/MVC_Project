@{
    ViewBag.Title = "Manage Project";
}

    <h2>Manage Project</h2>

<p>
    @Html.ActionLink("Create New", "Create") 
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client.Name)
        </th>
