<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TotalTimesheet Pro</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    

</head>
<body>
    <div class="container body-content">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6"><img src="@Url.Content("~/Content/img/compuskills-logo.png")" alt="Image" style="margin-left:10px;" /></div>
            <div class="col-lg-6 col-md-6 col-sm-6" style="text-align:right;"><img style="width:375px;" src="@Url.Content("~/Content/img/Ttp-Logo.png")" alt="Image" style="margin-left:10px;" /></div>
        </div>
        <div style="border:4px solid black; margin:10px; padding:35px;">
            @RenderBody()
        </div>

        @Html.ActionLink("Enter Time", "EnterTime", "Home") |
        @Html.ActionLink("Manage Clients", "ManageClients", "Home") |
        @Html.ActionLink("Manage Project", "ManageProjects", "Home") |
        @Html.ActionLink("Hours Report", "HoursReport", "Home") |
        @Html.ActionLink("Billing Report", "BillingReport", "Home")
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - (Elia Sternbuch) Total Timesheet Pro</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
